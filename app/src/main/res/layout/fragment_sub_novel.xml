<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.zhouya.sp.ten.fragments.novelfragments.SubNovelFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:paddingTop="45dp"
            android:paddingBottom="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <!-- title -->
            <TextView
                android:id="@+id/novel_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="在出租屋写作的那些日子"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textSize="25sp"
                />
            <!-- 作者 阅读量 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/novel_text_author_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="作者"/>
                <!-- 分割线 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/shuxian"
                    />

                <TextView
                    android:id="@+id/novel_text_times"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="阅读量: "/>
            </LinearLayout>
            <!-- 简介-->
            <TextView
                android:id="@+id/novel_text_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8E8E8"
                android:padding="10dp"
                android:text="内容简介"
                android:textSize="16sp"/>

            <!-- 正文内容-->
            <TextView
                android:id="@+id/novel_text_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="正文内容"
                android:textSize="18sp"/>
            <!-- 线-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@mipmap/line"/>
            <!-- 作者  现居地-->
            <TextView
                android:id="@+id/novel_text_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="作者"
                android:layout_margin="15dp"
                android:textSize="20sp"/>
            <!-- 长居地-->
            <TextView
                android:id="@+id/novel_text_authorbrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="长居地"
                android:layout_margin="15dp"/>
        </LinearLayout>
    </ScrollView>
    <!-- 收藏 -->
    <ImageView
        android:id="@+id/movie_favorite_btn"
        android:alpha="0.6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="80dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/selector_favorite_icon"/>

</RelativeLayout>
